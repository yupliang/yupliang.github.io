<span class='line-number'>6</span>
</pre></td><td class='code'><pre><code class=''><span class='line'>POPBasicAnimation *anim = [POPBasicAnimation animationWithPropertyNamed:kPOPLayerRotationY];
</span><span class='line'>    anim.duration = 1.0;
</span><span class='line'>    anim.timingFunction = [CAMediaTimingFunction functionWithName:kCAMediaTimingFunctionEaseInEaseOut];
</span><span class='line'>    view.layer.anchorPoint = CGPointMake(0.5, 0.5);
</span><span class='line'>    anim.toValue = @(2*M_PI);
</span><span class='line'>    [view.layer pop_addAnimation:anim forKey:@"popRotationY"];</span></code></pre></td></tr></table></div></figure>


